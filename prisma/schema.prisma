generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Application {
  id             Int      @id @default(autoincrement())
  company        String
  position       String
  status         String   @default("Applied") // Applied, Interview, Offer, Rejected
  dateApplied    DateTime @default(now())
  jobDescription String?
  resumeText     String?
  notes          String?
}
